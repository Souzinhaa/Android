<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textStyle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="textBodyStyle" parent="@style/textStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="buttonStyle" parent="@style/textBodyStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_itens</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_login_fields</item>
        <item name="android:layout_marginRight">@dimen/margin_login_fields</item>
    </style>

    <style name="editTextStyle" parent="@style/textStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_itens</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_login_fields</item>
        <item name="android:layout_marginRight">@dimen/margin_login_fields</item>
    </style>

    <style name="checkboxStyle" parent="@style/textBodyStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_itens</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">65dp</item>
        <item name="android:layout_marginRight">65dp</item>
    </style>

</resources>