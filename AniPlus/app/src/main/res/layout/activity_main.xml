<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    tools:context=".FormLogin">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/text_entrar"
        style="@style/textBodyStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/inicio_entrar"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintRight_toLeftOf="@id/text_cadastrar"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/text_cadastrar"
        style="@style/textBodyStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inicio_cadastrar"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintLeft_toRightOf="@id/text_entrar"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/edit_text_email"
        style="@style/editTextStyle"
        android:hint="@string/mail"
        app:layout_constraintTop_toBottomOf="@id/text_entrar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/edit_text_senha"
        style="@style/editTextStyle"
        android:hint="@string/pass"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <CheckBox
        android:id="@+id/checkbox_conectado"
        style="@style/checkboxStyle"
        android:text="@string/inicio_conectado"
        app:layout_constraintTop_toBottomOf="@id/edit_text_senha"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/button_login"
        style="@style/buttonStyle"
        android:text="@string/inicio_entrar"
        app:layout_constraintTop_toBottomOf="@id/checkbox_conectado"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/text_esqueci_senha"
        style="@style/textStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:text="@string/inicio_esqueceu_senha"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="110dp"
        app:layout_constraintTop_toBottomOf="@id/button_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>